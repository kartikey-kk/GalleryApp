<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:background="@drawable/img11"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:baselineAlignBottom="true"
        android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="80sp"
            android:padding="10sp"
            android:text="GALLERY"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="50sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:baselineAlignBottom="true"
            android:src="@drawable/baseline_arrow_forward_ios_24"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Today" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_1"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_2"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_6"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_7" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Yesterday"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_3"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_4"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_5" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_8"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_9" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:paddingVertical="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature_10"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

